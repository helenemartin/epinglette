<%= hidden_field_tag(:user_id, @user.id) %>

<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Sign up</h1>
  </div>

  <div class="panel-body">
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|%>
    <%= devise_error_messages! %>

     <div class="form-group">
      <%= f.label :avatar%>
        <div id="holder">
            <div class="users-avatar">
             <%= image_tag @user.avatar.url(:medium) , class: 'users-img' %>
            </div>
         </div>
    </div>

    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, autofocus: true, class:"form-control" %>
    </div>
  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, :autofocus => true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio %><br />
    <%= f.text_field :bio, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :website_url %><br />
    <%= f.text_field :website_url, :autofocus => true, class:"form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "Sign up", class:"btn btn-primary" %>
  </div>
  <% end %>
  </div>

  <div class="panel-footer">
    <%= render "devise/shared/links" %>
  </div>
</div>

<script>

  var fileupload = document.getElementById("upload")
  var holder = document.getElementById("holder")
  var user_id = document.getElementById("user_id").value
  function readfiles(file) {
    var formData = new FormData();
    formData.append('file' , file[0]);
    var xhr = new XMLHttpRequest();
    xhr.open('POST' , '/users/' + user_id + '/update_avatar');
    xhr.send(formData);
    xhr.addEventListener("load", transferComplete);
    // window.location.reload();
  }
  
  function transferComplete() { 
     window.location.reload();



  }

  holder.ondragover = function () { this.className = 'hover'; return false; };
  holder.ondragend = function () { this.className = ''; return false; };
  holder.ondrop = function (e) {
    this.className = '' ;
    e.preventDefault();
    readfiles(e.dataTransfer.files);
  }
</script>

