<%= render 'pages/home' unless user_signed_in? %>

<div class= "btn-group btn-group-lg" role="group">
  <button class="btn-lg-round button" data-filter="">All</button>
  <% @categories.each do |categorie| %>
    <button class="btn-lg-round button" data-filter="<%= categorie.try(:name).try(:downcase) %>"><%= categorie.name %></button>
  <% end %>
</div>

<div id="pins" class="transitions-enabled">
    <% @pins.each do |pin| %>
      <div class="box panel default" data-filter="<%= pin.category.try(:name).try(:downcase) %>">
        <% if pin.category.present? %>
          <div class="pinimage"><%= link_to image_tag("#{pin.category.image}.png") %></div> 
        <% else %>
          <div class="pinimage"><%= link_to image_tag("epingle.png") %></div>
        <% end %>
        
            <%= link_to image_tag(pin.image.url(:medium)), pin %>
                
          <div class="panel-body">
          <p><%= truncate pin.description, length: 150 %></p>
          <p><strong><%= pin.user.name if pin.user %></strong></p>

            <% if pin.user == current_user %>
            <div class="actions">
            <%= link_to edit_pin_path(pin) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
            <% end %>
            <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
            </div>
         <% end %>
       </div>
      </div>
  <% end %>
</div>

<div class="center">
<%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>


