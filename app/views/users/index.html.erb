
<div class="center">
  <h1>List of Users</h1>
</div>

    <% @users.each do |user| %>
      <div class="user-container">
        <div class="users-show">
          <p><%= link_to user.name, user_path(user) %>
            <% if  user.avatar.present? %>
              <%= link_to (image_tag (user.avatar.url(:medium)) ), user_path(user), class: 'users-avatar', size: '100x100' %>
            <% else %>
              <%= gravatar_for user %></p>
            <% end %>
        </div>
      </div>
  
<% end %>


