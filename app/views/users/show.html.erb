<%= hidden_field_tag(:user_id, @user.id) %>

<%= link_to 'User list', users_path %>

<div class="users">
  <h1><%=@user.name %></h1>
  <div id="holder">

  <div class="users-avatar"></div>

  <%= image_tag @user.avatar.url , class: 'users-img', width: '350'  %>
  
  
  </div>


  

  <p><strong><%= link_to_if(@user.website_url, website_url(@user), @user.website_url, :target => "_blank")%></strong></p>
</div>

<div id="pins" class="transitions-enabled">
  
    <% @pins.each do |pin| %>
    

      <div class="box panel default" data-filter="<%= pin.category.try(:name).try(:downcase) %>">
          <div class="pinimage"><%= link_to image_tag("#{pin.category.image}.png") %></div> 
        
        <% if pin.category.name == "Video" %>
          <%= link_to '', pin_path(pin), class:'video-overlay'%>  
             <iframe src="http://player.vimeo.com/video/<%=vimeo_id(pin.video_url)%>" width="230"   
              height="230" frameborder="0">  
            </iframe>

          <% else %>
            <%= link_to pin_path(pin) do %>
            <%= image_tag pin.image.url, width: '450' %>
          <% end %>
          <% end %>
                
          <div class="panel-body">
          <p><%= truncate pin.description, length: 150 %></p>
          <p><strong><%= link_to pin.user.name, user_path(pin.user) if pin.user %></strong></p>

            <% if pin.user == current_user %>
            <div class="actions">
            <%= link_to edit_pin_path(pin) do %>
                <span class="glyphicon glyphicon-edit"></span>
                Edit
            <% end %>
            <%= link_to pin, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-trash"></span>
              Delete
            <% end %>
            </div>
         <% end %>
       </div>
      </div>
  <% end %>
</div>


<script>

  var fileupload = document.getElementById("upload")
  var holder = document.getElementById("holder")
  var user_id = document.getElementById("user_id").value
  function readfiles(file) {
    var formData = new FormData();
    formData.append('file' , file[0]);
    var xhr = new XMLHttpRequest();
    xhr.open('POST' , '/users/' + user_id + '/update_avatar');
    xhr.send(formData);
    window.location.reload();
  }

  holder.ondragover = function () { this.className = 'hover'; return false; };
  holder.ondragend = function () { this.className = ''; return false; };
  holder.ondrop = function (e) {
    this.className = '' ;
    e.preventDefault();
    readfiles(e.dataTransfer.files);
  }
</script>